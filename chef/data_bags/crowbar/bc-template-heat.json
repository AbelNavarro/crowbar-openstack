{
  "id": "bc-template-heat",
  "description": "Installation for Heat",
  "attributes": {
    "heat": {
      "debug": false,
      "verbose": false,
      "rabbitmq_instance": "none",
      "database_instance": "none",
      "keystone_instance": "none",
      "keystone_service_user": "heat",
      "keystone_service_password": "",
      "gitrepo": "http://github.com/openstack/heat.git",
      "git_instance": "",
      "git_refspec": "stable/grizzly",
      "use_gitrepo": false,
      "use_gitbarclamp": false,
      "use_pip_cache": false,
      "pfs_deps": [
        "gawk",
        "sqlite3",
        "sudo",
        "python-xattr",
        "python-lxml",
        "python-mox",
        "python-paste",
        "python-migrate",
        "python-gflags",
        "python-greenlet",
        "python-libvirt",
        "python-libxml2",
        "python-routes",
        "python-netaddr",
        "python-pastedeploy",
        "python-eventlet",
        "python-cheetah",
        "python-carrot",
        "python-tempita",
        "python-sqlalchemy",
        "python-paramiko",
        "python-iso8601",
        "python-httplib2",
        "python-suds",
        "python-lockfile",
        "python-m2crypto",
        "python-boto",
        "python-kombu",
        "python-feedparser",
        "python-iso8601",
        "python-dateutil",
        "python-numpy",
        "python-amqplib",
        "python-boto",
        "python-webob",
        "python-anyjson",
        "python-yaml",
        "python-pymongo",
        "pip://Flask==0.9",
        "python-jinja2",
        "python-markupsafe",
        "pip://stevedore>=0.7",
        "pip://wsme>=0.5b1",
        "pip://pecan>=0.2.0",
        "pip://oslo.config>=1.1.0",
        "pip://happybase>=0.4",
        "pip://eventlet>=0.9.17",
        "pip://setuptools_git>=0.4",
        "pip://python-glanceclient",
        "pip://python-novaclient>=2.6.10",
        "pip://python-keystoneclient",
        "pip://python-swiftclient",
        "pip://requests<1.0",
        "pip://extras"
      ],
      "api": {
        "protocol": "http",
        "port": 8777
      },
      "db": {
        "password": "",
        "user": "heat",
        "database": "heat"
      }
    }
  },
  "deployment": {
    "heat": {
      "crowbar-revision": 0,
      "element_states": {
        "heat-server": [ "readying", "ready", "applying" ]
      },
      "elements": {},
      "element_order": [
        [ "heat-server" ]
      ],
      "element_run_list_order": {
        "heat-server": 101
      },
      "config": {
        "environment": "heat-base-config",
        "mode": "full",
        "transitions": false,
        "transition_list": [
        ]
      }
    }
  }
}

