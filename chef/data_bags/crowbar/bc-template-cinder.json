{
  "id": "bc-template-cinder",
  "description": "Installation for Cinder",
  "attributes": {
    "cinder": {
      "keystone_instance": "none",
      "service_user": "nova",
      "gitrepo": "http://github.com/openstack/cinder.git",
      "git_refspec": "stable/folsom",
      "use_gitrepo": true,
      "use_gitbarclamp": true,
      "pfs_deps": [
        "kpartx",
        "parted",
        "gawk",
        "sqlite3",
        "sudo",
        "python-xattr",
        "python-lxml",
        "python-mox",
        "python-paste",
        "python-migrate",
        "python-gflags",
        "python-greenlet",
        "python-libvirt",
        "python-libxml2",
        "python-routes",
        "python-netaddr",
        "python-pastedeploy",
        "python-eventlet",
        "python-cheetah",
        "python-carrot",
        "python-tempita",
        "python-sqlalchemy",
        "python-paramiko",
        "python-iso8601",
        "python-httplib2",
        "python-suds",
        "python-lockfile",
        "python-m2crypto",
        "python-boto",
        "python-kombu",
        "python-feedparser",
        "python-iso8601",
        "python-dateutil",
        "python-numpy",
        "lvm2",
        "open-iscsi",
        "open-iscsi-utils",
        "tgt",
        "python-amqplib",
        "python-boto",
        "python-webob",
        "pip://eventlet>=0.9.17",
        "pip://setuptools_git>=0.4",
        "pip://python-quantumclient>=2.0",
        "pip://python-glanceclient>=0.5.0,<2",
        "pip://python-novaclient",
        "pip://python-keystoneclient"
      ],
      "volume": {
        "volume_name": "nova-volumes",
        "volume_type": "raw",
        "nova_raw_method": "all",
        "nova_volume_disks": [],
        "local_file": "/var/lib/nova/volume.raw",
        "local_size": 2000,
        "eqlx": {
          "san_ip": "192.168.124.11",
          "san_login": "grpadmin",
          "san_password": "12345",
          "san_thin_provision": false,
          "eqlx_group_name": "group-0",
          "eqlx_use_chap": false,
          "eqlx_chap_login": "chapadmin",
          "eqlx_chap_password": "12345",
          "eqlx_ssh_keepalive_interval": 1200,
          "eqlx_cli_timeout": 30
        }
      },
      "db": {
        "mysql_instance": "none",
        "password": "",
        "user": "cinder",
        "database": "cinder"
      }
    }
  },
  "deployment": {
    "cinder": {
      "crowbar-revision": 0,
      "element_states": {
        "cinder-server": [ "readying", "ready", "applying" ]
      },
      "elements": {},
      "element_order": [
        [ "cinder-server" ]
      ],
      "config": {
        "environment": "cinder-base-config",
        "mode": "full",
        "transitions": false,
        "transition_list": [
        ]
      }
    }
  }
}

