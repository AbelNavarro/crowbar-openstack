%table.data.box
  %tbody
    %thead
      %th= t '.node'
      %th= t '.status'
      %th= t '.started_at'
      %th= t '.ended_at'
    %tbody
      - @test_runs.each do |test_run|
        %tr
          %td{:title=>test_run["node"]}= link_to @nodes_hash[test_run["node"]].alias, { :controller => 'nodes', :action => 'show', :name => test_run["node"] }
          %td
            %span{ :class => 'status' }
              = test_run["status"] == "running" ? t(".statuses.#{test_run['status']}") : (link_to t(".statuses.#{test_run['status']}"), "results/#{test_run['uuid']}")
          %td= Time.at(test_run["started"]).to_s
          %td= test_run["ended"].nil? ? "" : Time.at(test_run["ended"]).to_s
