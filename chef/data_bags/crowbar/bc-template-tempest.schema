{
  "type": "map",
  "required": true,
  "mapping": {
    "id": { "type": "str", "required": true, "pattern": "/^bc-tempest-|^bc-template-tempest$/" },
    "description": { "type": "str", "required": true },
    "attributes": {
      "type": "map",
      "required": true,
      "mapping": {
        "tempest": {
          "type": "map",
          "required": true,
          "mapping": {
            "tempest_tarball": { "type": "str", "required": true },
            "nova_instance": { "type": "str", "required": true },
            "create_alt_user": { "type": "bool", "required": true },
            "alt_username": { "type": "str", "required": true },
            "alt_usertenant": { "type": "str", "required": true },
            "alt_userpass": { "type": "str" },
            "test_results": {
              "type": "seq",
              "required": true,
              "sequence": [ {
                "type": "map",
                "mapping": {
                  "uuid": { "type": "str", "required": true },
                  "started": { "type": "str", "required": true },
                  "ended": { "type": "str", "required": true },
                  "status": { "type": "str", "required": true }
                }
              } ]
            }
          }
        }
      }
    },
    "deployment": {
      "type": "map",
      "required": true,
      "mapping": {
        "tempest": {
          "type": "map",
          "required": true,
          "mapping": {
            "crowbar-revision": { "type": "int", "required": true },
            "crowbar-committing": { "type": "bool" },
            "crowbar-queued": { "type": "bool" },
            "element_states": {
              "type": "map",
              "mapping": {
                = : {
                  "type": "seq",
                  "required": true,
                  "sequence": [ { "type": "str" } ]
                }
              }
            },
            "elements": {
              "type": "map",
              "required": true,
              "mapping": {
                = : {
                  "type": "seq",
                  "required": true,
                  "sequence": [ { "type": "str" } ]
                }
              }
            },
            "element_order": {
              "type": "seq",
              "required": true,
              "sequence": [ {
                "type": "seq",
                "sequence": [ { "type": "str" } ]
              } ]
            },
            "config": {
              "type": "map",
              "required": true,
              "mapping": {
                "environment": { "type": "str", "required": true },
                "mode": { "type": "str", "required": true },
                "transitions": { "type": "bool", "required": true },
                "transition_list": {
                  "type": "seq",
                  "required": true,
                  "sequence": [ { "type": "str" } ]
                }
              }
            }
          }
        }
      }
    }
  }
}
