#
# The MySQL database server configuration file: SSL specific bits.

<% if node['mysql']['ssl']['enabled'] %>
[mysqld]
ssl-cert = <%= node['mysql']['ssl']['certfile'] %>
ssl-key = <%= node['mysql']['ssl']['keyfile'] %>
<% unless (node['mysql']['ssl']['generate_certs'] || node['mysql']['ssl']['insecure']) %>
ssl-ca = <%= node['mysql']['ssl']['ca_certs'] %>

[client]
ssl-ca = <%= node['mysql']['ssl']['ca_certs'] %>
<% end %>
<% end %>
