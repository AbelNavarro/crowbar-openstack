[DEFAULT]
debug=<%= node[:cinder][:debug] %>
verbose=<%= node[:cinder][:verbose] %>
logdir=/var/log/cinder
state_path=/var/lib/cinder
use_syslog=true
connection_type=libvirt
sql_connection=<%= @sql_connection %>
my_ip=<%= node[:cinder][:my_ip] %>
glance_api_servers=<%= @glance_server_ip %>:<%= @glance_server_port %>
rootwrap_config=/etc/cinder/rootwrap.conf
auth_strategy=keystone
osapi_volume_listen=<%= node[:glance][:api][:bind_open_address] ? "0.0.0.0" : node[:cinder][:api][:bind_host] %>
osapi_volume_listen_port=<%= node[:cinder][:api][:bind_port] %>
api_paste_config=/etc/cinder/api-paste.ini
# volume_name_template=volume-%s
# snapshot_name_template=snapshot-%s
rabbit_host=<%= @rabbit_host %>
rabbit_userid=<%= @rabbit_userid %>
rabbit_password=<%= @rabbit_password%>
rabbit_virtual_host=<%= @rabbit_virtual_host %>
